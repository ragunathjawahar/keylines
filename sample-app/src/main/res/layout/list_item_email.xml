<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_three_line_height"
    android:clickable="true"
    android:background="?attr/selectableItemBackground">

    <LinearLayout
        android:id="@+id/textContentLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/list_item_text_margin_start"
        android:layout_marginStart="@dimen/list_item_text_margin_start"
        android:layout_marginRight="@dimen/list_item_margin_horizontal"
        android:layout_marginEnd="@dimen/list_item_margin_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/senderTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            tools:text="Ali Connors" />

        <TextView
            android:id="@+id/subjectTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            tools:text="Did you know what John Doe did?" />

        <TextView
            android:id="@+id/summaryTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="The first few times he tried to climb up on the smooth chest of drawers." />
    </LinearLayout>

    <ImageView
        android:id="@+id/avatarImageView"
        android:layout_width="@dimen/list_item_avatar_width"
        android:layout_height="@dimen/list_item_avatar_height"
        android:layout_alignTop="@+id/textContentLayout"
        android:layout_marginLeft="@dimen/list_item_margin_horizontal"
        android:layout_marginStart="@dimen/list_item_margin_horizontal"
        tools:ignore="ContentDescription"
        tools:background="#FF757575" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_divider_height"
        android:layout_alignParentBottom="true"
        android:background="@color/list_item_divider" />
</RelativeLayout>
